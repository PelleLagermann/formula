// colors
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

// layout
$navbarHeight = 6rem
$sidebarWidth = 35rem
$contentWidth = 80%

$lineNumbersWrapperWidth = 3.5rem

// HACK: Override some styles here instead of in index.styl; because - https://github.com/vuejs/vuepress/issues/1099
.navbar
  .site-name
    font-size 2.3rem

  .links
    font-size 1.5rem

.sidebar 
  a.sidebar-link
    font-weight 600
  .sidebar-sub-headers 
    a.sidebar-link
      font-weight 400

.page 
  padding-bottom: 2.5rem

.home
  padding $navbarHeight 3.5rem 0
  max-width 960px
  margin 0px auto
  .hero
    img
      max-width: 100%
      max-height 280px
      margin 3.5rem auto 2rem
    h1
      font-size 3.5rem
    h1, .description, .action
      margin 5rem auto
    .description
      max-width 50rem
      font-size 1.6rem
      line-height 2.7rem
    .action-button
      font-size 1.7rem
      padding 1.3rem 2.1rem
      border-bottom 1px solid darken($accentColor, 10%)
  .features
    border-top 1px solid $borderColor
    padding 1.7rem 0
    margin-top 3rem
  .feature
    h2
      font-size 2rem
      padding-bottom 0
  .footer
    padding 3rem
    border-top 1px solid $borderColor
